{
  "name": "Christine Valmy Chat Workflow",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "chat",
        "responseMode": "responseNode"
      },
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "position": [240, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://us-central1-christinevalmy.cloudfunctions.net/cv-assistant-claude",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "httpHeaderAuth": {
          "name": "Authorization",
          "value": "Bearer {{ $json.token }}"
        },
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "user_id",
              "value": "{{ $json.user_id }}"
            },
            {
              "name": "thread_id",
              "value": "{{ $json.thread_id }}"
            },
            {
              "name": "query",
              "value": "{{ $json.query }}"
            },
            {
              "name": "history",
              "value": "{{ $json.history }}"
            }
          ]
        }
      },
      "name": "Google Cloud Function",
      "type": "n8n-nodes-base.httpRequest",
      "position": [460, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "{\n  \"reply\": \"{{ $json.response || $json.answer || $json.result || $json }}\",\n  \"status\": \"success\",\n  \"sessionId\": \"{{ $json.sessionId }}\"\n}",
        "responseHeaders": {
          "parameters": [
            {
              "name": "Access-Control-Allow-Origin",
              "value": "*"
            },
            {
              "name": "Access-Control-Allow-Methods",
              "value": "GET, POST, OPTIONS"
            },
            {
              "name": "Access-Control-Allow-Headers",
              "value": "Content-Type, Authorization"
            },
            {
              "name": "Access-Control-Max-Age",
              "value": "86400"
            }
          ]
        }
      },
      "name": "Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "position": [680, 300]
    }
  ],
  "connections": {
    "Webhook Trigger": {
      "main": [
        [
          {
            "node": "Google Cloud Function",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Google Cloud Function": {
      "main": [
        [
          {
            "node": "Response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
} 